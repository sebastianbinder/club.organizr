- if user_signed_in?
  ul.nav.navbar-nav.navbar-right
    li.dropdown
      a.dropdown-toggle href="#" data-toggle="dropdown"
        => t(".language")
        b.caret
      ul.dropdown-menu
        li = link_to t(".lang.english"), params.merge({:locale => 'en'})
        li = link_to t(".lang.german"), params.merge({:locale => 'de'})
    li.dropdown
      a.dropdown-toggle href="#" data-toggle="dropdown"
        => current_user.firstname
        => current_user.lastname
        b.caret
      ul.dropdown-menu
        li = link_to(t('.my_profile'), user_path(current_user))
        li.divider
        li.danger = link_to(t('.logout'), destroy_user_session_path, method: 'delete')
- else
  = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "navbar-form navbar-right"}) do |f|
    .form-group
      = f.text_field :email, :class => "form-control", placeholder: "#{t(".desc.email")}", size: 20
    .form-group
      = f.password_field :password, :class => "form-control", placeholder: "#{t(".desc.password")}", size: 20
    - if devise_mapping.rememberable?
      = f.hidden_field :remember_me, :value => true
    .btn-group
      button.btn.btn-success type="submit"
        = t(".login")
  ul.nav.navbar-nav.navbar-right
    li.dropdown
      a.dropdown-toggle href="#" data-toggle="dropdown"
        => t(".language")
        b.caret
      ul.dropdown-menu
        li = link_to t(".lang.english"), params.merge({:locale => 'en'})
        li = link_to t(".lang.german"), params.merge({:locale => 'de'})