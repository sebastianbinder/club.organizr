<ul class="nav navbar-nav">
	<% if user_signed_in? %>
		<% if params[:customer_id].nil? %>
			<% $customers.each do |customer| %>
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= customer.name %> <b class="caret"></b></a>
					<ul class="dropdown-menu">
						<li><%= link_to(t('.events'), customer_events_path(customer.id)) %></li>
						<li><%= link_to(t('.members'), users_path()) %></li>
					</ul>
				</li>
			<% end %>
		<% else %>
			<li class=''><%= link_to(t('.customers'), customers_path) %></li> 
			<li class=''><%= link_to(t('.events'), customer_events_path(params[:customer_id])) %></li>
			<li class=''><%= link_to(t('.members'), users_path()) %></li>
		<% end %>
	<% end %>
</ul>