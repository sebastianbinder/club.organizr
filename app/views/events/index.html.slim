.page-header
  h1 = t(".events")
.row
  .col-md-2.col-md-offset-10[align="right" style="margin-bottom: 10px"]
    .btn-group
      button.btn.btn-success.btn-sm[type="button" data-toggle="modal" data-target="#myModal"]
        span.glyphicon.glyphicon-calendar
      - if can? :create, Event
        = link_to(new_customer_event_path(@customer), :class => "btn btn-success btn-sm") do
          span.glyphicon.glyphicon-plus
.row
  .table-responsive
    table.table.table-bordered.table-hover.table-condensed
      thead
        tr
          th = t(".date")
          th = t(".title")
          th = t(".location")
      tbody
        = render partial: 'events/index_tr', collection: @events, as: 'event'
  .col-md-offset-4
.col-md-3
#myModal.modal.fade[tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"]
  .modal-dialog
    .modal-content
      .modal-header
        button.close[type="button" data-dismiss="modal" aria-hidden="true"]
          | Ã—
        h4#myModalLabel.modal-title
          | Calendar-Feed
      .modal-body
        div[style="overflow: scroll"]
          = "http://"+request.host_with_port+customer_eventfeed_path(params[:customer_id])+".ics?email="+current_user.email+"&token="+current_user.authentication_token
      .modal-footer
        button.btn.btn-default[type="button" data-dismiss="modal"]
          | Close
