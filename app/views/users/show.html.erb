<div class="page-header">
	<h1><%= t(".user") %> "<%= @user.firstname %> <%= @user.lastname %>"</h1>
</div>

<div class="row">
	<div class="col-md-9">
		<div class="table-responsive">
			<table class="table table-bordered table-hover table-condensed">
				<tr>
					<th><%= t(".firstname") %></th>
					<td><%= @user.firstname %></td>
				</tr>
				<tr>
					<th><%= t(".lastname") %></th>
					<td><%= @user.lastname %></td>
				</tr>
				<tr>
					<th><%= t(".email") %></th>
					<td><%= @user.email %></td>
				</tr>
				<tr>
					<th><%= t(".phone_number") %></th>
					<td><%= @user.phone_number %></td>
				</tr>
				<tr>
					<th><%= t(".address") %></th>
					<td><%= @user.street %> <%= @user.street_number %><br>
					<%= @user.zipcode %><%= @user.city %><br>
					<%= @user.country %></td>
				</tr>
			</table>
		</div>
	</div>

	<div class="col-md-1">
		<div class="btn-group-vertical"></div>
	</div>

</div>