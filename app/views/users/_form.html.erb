<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <strong><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</strong>
	<ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user do |f| %>

<div class="row">
  <div class="col-md-9">

    <div class="table-responsive">
      <table class="table table-bordered table-hover table-condensed">
         <tr>
          <th><%= f.label :email, t("users.email"), :class => "col-lg-2 control-label" %></th>
          <td>
          	<div class="input-group">
            	<span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
            	<%= f.email_field :email, :class => "form-control" %>
            </div>
          </td>
        </tr>
       <!-- <tr>
          <th> <%= f.label :password, t("users.password"), :class => "col-lg-2 control-label" %></th>
          <td><%= f.password_field :password, :class => "form-control" %><%= f.password_field :password_confirmation, :class => "form-control" %></td>
        </tr> -->
        <tr>
          <th> <%= f.label :firstname, t("users.firstname"), :class => "col-lg-2 control-label" %></th>
          <td><%= f.text_field :firstname, :class => "form-control" %></td>
        </tr>
        <tr>
          <th> <%= f.label :lastname, t("users.lastname"), :class => "col-lg-2 control-label" %></th>
          <td> <%= f.text_field :lastname, :class => "form-control" %></td>
        </tr>
        <tr>
          <th> <%= f.label :phone_number, t("users.phone_number"), :class => "col-lg-2 control-label" %></th>
          <td> <%= f.text_field :phone_number, :class => "form-control" %></td>
        </tr>
        <tr>
          <th> <%= f.label :street, t("users.street"), :class => "col-lg-2 control-label" %></th>
          <td> <%= f.text_field :street, :class => "form-control" %></td>
        </tr>
        <tr>
          <th> <%= f.label :street_number, t("users.lastname"), :class => "col-lg-2 control-label" %></th>
          <td> <%= f.text_field :street_number, :class => "form-control" %></td>
        </tr>
        <tr>
          <th> <%= f.label :zipcode, t("users.zipcode"), :class => "col-lg-2 control-label" %></th>
          <td> <%= f.text_field :zipcode, :class => "form-control" %></td>
        </tr>
        <tr>
          <th> <%= f.label :city, t("users.city"), :class => "col-lg-2 control-label" %></th>
          <td> <%= f.text_field :city, :class => "form-control" %></td>
        </tr>
        <tr>
          <th> <%= f.label :country, t("users.country"), :class => "col-lg-2 control-label" %></th>
          <td> <%= f.text_field :country, :class => "form-control" %></td>
        </tr>
        <tr>
        	<td colspan="2">
        	<% for role in User::ROLES %>
  <%= check_box_tag "user[roles][#{role}]", role, @user.roles.include?(role), {:name => "user[roles][]"}%>
  <%= label_tag "user_roles_#{role}", role.humanize %>&nbsp;&nbsp;&nbsp;
<% end %>
<%= hidden_field_tag "user[roles][]", "" %>
        	</td>
        </tr>
        <tr>
          <td colspan="2"><%= f.submit t("actions.save"), :class => "btn btn-success" %></td>
        </tr>
      </table>
      
    </div>

  </div>

  <div class="col-md-1">
    <div class="btn-group-vertical">
    </div>
  </div>

</div>

<% end %>