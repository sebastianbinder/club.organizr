<%= devise_error_messages! %>
<div class="page-header">
	<h1>Change your password</h1>
</div>

<div class="row">
	<div class="col-md-9">
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "col-lg-4"}) do |f| %>
  
  
  <%= f.hidden_field :reset_password_token %>
<div class="form-group">
			<%= f.text_field :password, :class => "form-control", placeholder: "New password", size: 20  %>
		</div>
		<div class="form-group">
			<%= f.password_field :password_confirmation, :class => "form-control", placeholder: "Confirm new password", size: 20  %>
		</div>

  <div class="btn-group">
			<button type="submit" class="btn btn-success">Change My Password!</button>
		</div>
<% end %>


<%= render "devise/shared/links" %>
	</div>
</div>