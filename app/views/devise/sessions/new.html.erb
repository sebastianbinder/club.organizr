<div class="page-header">
	<h1><%= t(".login")%></h1>
</div>

<div class="row">
	<div class="col-md-9">

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "col-lg-4"}) do |f| %>
		<div class="form-group">
			<%= f.text_field :email, :class => "form-control", placeholder: "#{t(".desc.email")}", size: 20  %>
		</div>
		<div class="form-group">
			<%= f.password_field :password, :class => "form-control", placeholder: "#{t(".desc.password")}", size: 20  %>
		</div>
		<% if devise_mapping.rememberable? %>
			<%= f.hidden_field :remember_me, :value => true %>
		<% end -%>
		<div class="btn-group">
			<button type="submit" class="btn btn-success hidden-xs"><%= t(".login") %></button>
		</div>
	<% end %>
<%= render "devise/shared/links" %>
	</div>
</div>